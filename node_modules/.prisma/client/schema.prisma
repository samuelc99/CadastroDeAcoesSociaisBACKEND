generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  actions     Action[]     @relation("OwnerActions")
  enrollments Enrollment[]
}

enum Role {
  USER
  ADMIN
}

model Action {
  id          String       @id @default(cuid())
  title       String
  description String
  location    String
  date        DateTime     @default(now())
  slots       Int?
  responsible String
  contact     String
  link        String?
  status      ActionStatus @default(ACTIVE)
  ownerId     String?
  owner       User?        @relation("OwnerActions", fields: [ownerId], references: [id])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  enrollments Enrollment[]
}

enum ActionStatus {
  ACTIVE
  CLOSED
  CANCELLED
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  actionId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  action Action @relation(fields: [actionId], references: [id])

  @@unique([userId, actionId])
}
